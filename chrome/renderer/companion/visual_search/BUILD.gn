    ":visual_search",
    "//base",
    "//base/test:test_support",
    "//testing/gmock",
    "//testing/gtest",
    "//ui/gfx/geometry:geometry",
  ]
}

source_set("browser_tests") {
  testonly = true
  sources = [ "visual_search_classifier_agent_browsertest.cc" ]
  deps = [
    ":visual_search",
    "//base",
    "//base/test:test_support",
    "//chrome/common",
    "//chrome/test:test_support",
    "//testing/gmock",
    "//testing/gtest",
  ]
}
